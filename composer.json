{
    "name": "visionmetrics/saas",
    "description": "VisionMetrics - Lead Tracking & Attribution SaaS Platform - Production Ready",
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": ">=8.2",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-redis": "*",
        "ext-curl": "*",
        "vlucas/phpdotenv": "^5.6",
        "mercadopago/dx-php": "^2.6",
        "firebase/php-jwt": "^6.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "friendsofphp/php-cs-fixer": "^3.45"
    },
    "autoload": {
        "psr-4": {
            "VisionMetrics\\": "src/",
            "VisionMetrics\\Adapters\\": "src/adapters/"
        },
        "files": [
            "src/bootstrap.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "VisionMetrics\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --testdox",
        "test:coverage": "phpunit --coverage-html coverage",
        "lint": "php-cs-fixer fix --dry-run --diff",
        "fix": "php-cs-fixer fix",
        "post-install-cmd": [
            "@php -r \"if (!file_exists('.env')) { copy('env.example', '.env'); echo 'Created .env file\\n'; }\""
        ]
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    }
}