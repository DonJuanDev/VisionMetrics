# VisionMetrics - Environment Variables

# Application
APP_NAME=VisionMetrics
APP_ENV=production
APP_URL=http://localhost:3000
APP_DEBUG=false

# Database
DB_HOST=mysql
DB_NAME=visionmetrics
DB_USER=visionmetrics
DB_PASS=visionmetrics
MYSQL_ROOT_PASSWORD=root_password

# Redis
REDIS_HOST=redis
REDIS_PORT=6379

# Sessions
SESSION_LIFETIME=7200
SESSION_SECURE=false

# Security
JWT_SECRET=your-jwt-secret-key-here-change-in-production
CSRF_TOKEN_SALT=your-csrf-salt-here

# Integrations
META_ADS_ACCESS_TOKEN=
META_ADS_PIXEL_ID=
GA4_MEASUREMENT_ID=
GA4_API_SECRET=
TIKTOK_PIXEL_ID=
TIKTOK_ACCESS_TOKEN=

# Stripe Billing
STRIPE_PUBLIC_KEY=pk_test_xxxxx
STRIPE_SECRET_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# Email (para notificações)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_USER=
SMTP_PASS=
SMTP_FROM_EMAIL=noreply@visionmetrics.com
SMTP_FROM_NAME=VisionMetrics

# Sentry (Monitoring - opcional)
SENTRY_DSN=

# Features Flags
FEATURE_REAL_TIME=true
FEATURE_WORKFLOWS=true
FEATURE_CUSTOM_FIELDS=true

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logs
LOG_LEVEL=INFO
LOG_CHANNEL=daily